---
import Base from "../layouts/Base.astro";
const posts = await Astro.glob('../pages/blog/*.{md,mdx}');
const tituloPg = "Blog";
---

<Base tituloPg={tituloPg}>
  <p>aqui pondre las entradas de blog</p>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.titulo}</a>
        </li>
      ))
    }
  </ul>
</Base>
